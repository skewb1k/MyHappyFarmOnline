<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">
    <ImageView
            android:id="@+id/foodmarket6"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:onClick="foodMarketHiddenCardClicked"
            android:layout_marginTop="30dp"
            app:layout_constraintRight_toRightOf="@id/hand"
            app:layout_constraintTop_toTopOf="@id/foodmarket"
            android:src="@drawable/foodcard"/>
    <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ok"
            android:onClick="okButtonClicked"
            android:visibility="invisible"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            app:layout_constraintRight_toRightOf="@id/hand"
            app:layout_constraintBottom_toTopOf="@id/hand"/>

    <include
            android:id="@+id/hand"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/hand"/>

    <include
            android:id="@+id/foodmarket"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintRight_toLeftOf="@id/foodmarket6"
            app:layout_constraintBottom_toBottomOf="@id/animalmarket"
            layout="@layout/foodmarket"/>
    <include
            android:id="@+id/player1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/player"/>
    <Button
            android:id="@+id/plant"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="@string/plant_title"
            android:onClick="plantClicked"
            android:textSize="@dimen/plant_fontsize"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:layout_marginRight="71dp"
            app:layout_constraintRight_toRightOf="@id/player1"
            app:layout_constraintBottom_toBottomOf="@id/player1"/>
    <include
            android:id="@+id/player2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/otherplayer"/>
    <include
            android:id="@+id/player3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/player2"
            layout="@layout/otherplayer"/>
    <include
            android:id="@+id/animalmarket"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="40dp"
            app:layout_constraintLeft_toLeftOf="@id/player1"
            app:layout_constraintBottom_toTopOf="@id/player1"
            layout="@layout/animalmarket"/>
</androidx.constraintlayout.widget.ConstraintLayout>