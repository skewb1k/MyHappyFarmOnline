<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/nickname"
            android:fontFamily="monospace"
            android:text="nick"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textSize="10pt"
            android:layout_width="168dp"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/iron"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/iron"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/coins"/>
    <TextView
            android:id="@+id/coins"
            android:fontFamily="monospace"
            android:text="x0"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textSize="10pt"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="@id/barnbg"/>
    <ImageView
            android:id="@+id/barnbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/nickname"
            android:src="@drawable/barn_demo3"/>
    <include
            android:id="@+id/barninventory"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            app:layout_constraintLeft_toLeftOf="@id/barnbg"
            app:layout_constraintTop_toTopOf="@id/barnbg"
            layout="@layout/barninventory"/>
    <ImageView
            android:id="@+id/barnplants0"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barninventory"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants1"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants0"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants2"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants0"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants3"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="33dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants0"
            android:src="@drawable/carrot"/>

    <ImageView
            android:id="@+id/barnplants4"
            android:layout_width="40dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/barnplants0"
            app:layout_constraintBottom_toBottomOf="@id/barnplants0"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants5"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="61dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barninventory"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants6"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants5"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants7"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:onClick="barnPlantsClicked"
            android:layout_marginLeft="23dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants5"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants8"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="33dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants5"
            android:src="@drawable/carrot"/>

    <ImageView
            android:id="@+id/barnplants9"
            android:layout_width="40dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/barnplants5"
            app:layout_constraintBottom_toBottomOf="@id/barnplants5"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants10"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintTop_toTopOf="@id/barninventory"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants11"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants10"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants12"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="23dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants10"
            android:src="@drawable/carrot"/>
    <ImageView
            android:id="@+id/barnplants13"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginLeft="33dp"
            app:layout_constraintLeft_toRightOf="@id/barninventory"
            app:layout_constraintBottom_toBottomOf="@id/barnplants10"
            android:src="@drawable/carrot"/>

    <ImageView
            android:id="@+id/barnplants14"
            android:layout_width="40dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/barnplants5"
            app:layout_constraintBottom_toBottomOf="@id/barnplants10"
            android:src="@drawable/carrot"/>

</androidx.constraintlayout.widget.ConstraintLayout>